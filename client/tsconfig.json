{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2015", "dom"],
        "typeRoots": ["../node_modules/@types"],
        "types": ["node", "jasmine", "jasminewd2", "webpack-env"],
        "jsx": "react" // Add this line to support JSX
    },
    "include": ["./**/*.ts", "./**/*.tsx"], // Include .tsx files
    "exclude": ["node_modules"]
}